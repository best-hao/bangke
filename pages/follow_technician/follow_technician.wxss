page {
  background: #f8f8f8;
}
.item {
  position: relative;
  width: 670rpx;
  height: 160rpx;
  background: #fff;
  margin: 40rpx auto 0;
  padding: 0 40rpx;
  box-sizing: border-box;
  box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.15);
  border-radius: 10px;
}
.item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.name {
  font-size: 32rpx;
  color: #323232;
  font-weight: bold;
}
.shop {
  margin-top: 10rpx;
  color: #323232;
  font-size: 28rpx;
}
.item .dot {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  padding: 20rpx;
}
.item .dot .btn {
  position: absolute;
  right: 100%;
  width: 160rpx;
  height: 70rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: rgb(255, 255, 255);
  border-radius: 10rpx;
  box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.1);
  display: none;
  transition: all .2s;
}
.item .dot .btn.show {
  display: block;  
}
.item .dot view{
  width: 8rpx;
  height: 8rpx;
  background: #323232;
  border-radius: 50%;
  margin: 3rpx;
}

