page {
  background: #f8f8f8;
}
.item {
  position: relative;
  width: 670rpx;
  background: #fff;
  margin: 40rpx auto 0;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.15);
  border-radius: 10px;
}
.title .notice {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #1fb7b6;
  margin-right: 20rpx;
}
.title {
  font-size: 32rpx;
  color: #323232;
  font-weight: bold;
}
.date {
  color: #c8c8c8;
  font-size: 26rpx;
  font-weight: normal;
}
.content {
  font-size: 28rpx;
  color: #323232;
  padding-left: 60rpx;
  margin-top: 30rpx;
}
.content .header {
  font-size: 30rpx;
  font-weight: bold;
}
.content .body {
  line-height: 40rpx;
  text-align: justify;
}